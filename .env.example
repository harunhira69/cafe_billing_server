# ===========================================
# Cafe Billing Server - Environment Variables
# ===========================================

# Server
PORT=3000

# MongoDB
MONGODB_URI=mongodb://localhost:27017

# CORS (comma-separated origins for production)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Firebase Admin SDK
# Path to your Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT=firebase_admin.json

# ===========================================
# JWT Authentication
# ===========================================
# Generate secrets: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_access_token_secret_here
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Cookie settings (set to true in production with HTTPS)
COOKIE_SECURE=false

# ===========================================
# Admin Bootstrap (First-time Admin Setup)
# ===========================================
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADMIN_BOOTSTRAP_SECRET=your_long_random_secret_here
ADMIN_BOOTSTRAP_EMAIL=admin@yourdomain.com
ENABLE_ADMIN_BOOTSTRAP=true

# ===========================================
# IMPORTANT: After first admin is set up,
# set ENABLE_ADMIN_BOOTSTRAP=false for security
# ===========================================
